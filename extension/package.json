{
  "name": "zombiecoder-bengali",
  "displayName": "ZombieCoder Bengali",
  "description": "Bengali language support for ZombieCoder AI coding assistant",
  "version": "1.0.0",
  "publisher": "zombiecoder",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages", "Machine Learning", "Snippets"],
  "activationEvents": ["onLanguage:bengali", "onCommand:zombiecoder.chat", "onCommand:zombiecoder.voiceCommand"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zombiecoder.chat",
        "title": "ZombieCoder: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "zombiecoder.voiceCommand",
        "title": "ZombieCoder: Voice Command (Bengali)",
        "icon": "$(mic)"
      },
      {
        "command": "zombiecoder.generateCode",
        "title": "ZombieCoder: Generate Code"
      },
      {
        "command": "zombiecoder.reviewCode",
        "title": "ZombieCoder: Review Code"
      },
      {
        "command": "zombiecoder.explainCode",
        "title": "ZombieCoder: Explain Code"
      },
      {
        "command": "zombiecoder.openAdmin",
        "title": "ZombieCoder: Open Admin Panel"
      }
    ],
    "keybindings": [
      {
        "command": "zombiecoder.chat",
        "key": "ctrl+shift+z",
        "mac": "cmd+shift+z"
      },
      {
        "command": "zombiecoder.voiceCommand",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zombiecoder",
          "title": "ZombieCoder",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "zombiecoder": [
        {
          "id": "zombiecoder.chatView",
          "name": "Chat"
        },
        {
          "id": "zombiecoder.historyView",
          "name": "History"
        }
      ]
    },
    "configuration": {
      "title": "ZombieCoder Bengali",
      "properties": {
        "zombiecoder.gatewayUrl": {
          "type": "string",
          "default": "http://localhost:8001",
          "description": "ZombieCoder Gateway URL"
        },
        "zombiecoder.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for authentication"
        },
        "zombiecoder.enableBengali": {
          "type": "boolean",
          "default": true,
          "description": "Enable Bengali language support"
        },
        "zombiecoder.enableVoice": {
          "type": "boolean",
          "default": true,
          "description": "Enable voice commands"
        },
        "zombiecoder.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save chat history to database"
        },
        "zombiecoder.enableStreaming": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming responses for better UX"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
