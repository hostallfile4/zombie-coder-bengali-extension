{
  "system": {
    "ubuntu": {
      "required": ["curl", "wget", "git", "build-essential"],
      "optional": ["docker", "docker-compose"]
    },
    "windows": {
      "required": ["chocolatey", "git"],
      "optional": ["docker-desktop"]
    }
  },
  "runtime": {
    "nodejs": {
      "version": ">=18.0.0",
      "url": {
        "ubuntu": "https://deb.nodesource.com/setup_20.x",
        "windows": "choco install nodejs"
      }
    },
    "python": {
      "version": ">=3.8.0",
      "url": {
        "ubuntu": "apt-get install python3 python3-pip",
        "windows": "choco install python"
      }
    }
  },
  "ai": {
    "ollama": {
      "version": "latest",
      "url": {
        "ubuntu": "https://ollama.com/install.sh",
        "windows": "https://ollama.com/download/OllamaSetup.exe"
      },
      "models": ["codellama:7b", "mistral:7b", "llama2:7b"]
    }
  },
  "database": {
    "mysql": {
      "version": ">=8.0.0",
      "url": {
        "ubuntu": "apt-get install mysql-server",
        "windows": "choco install mysql"
      }
    },
    "sqlite": {
      "version": ">=3.0.0",
      "url": {
        "ubuntu": "apt-get install sqlite3",
        "windows": "choco install sqlite"
      }
    }
  },
  "editor": {
    "vscode": {
      "version": ">=1.80.0",
      "url": {
        "ubuntu": "https://code.visualstudio.com/docs/setup/linux",
        "windows": "choco install vscode"
      }
    }
  }
}
